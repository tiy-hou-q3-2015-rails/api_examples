<h1>Sign in!</h1>

<%= form_tag signin_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <br>
    <%= email_field_tag :email %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password %>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>
    or
    <%= link_to 'Sign up', signup_path %>
  </div>
<% end %>
